<!DOCTYPE html>
<html>
<head>
    <title>Add Asset</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Add New Asset</h1>
        <form action="/add-asset" method="post">
            <!-- Include all necessary fields here -->
            <label>Asset Class:</label>
            <input type="text" name="asset_class" required>
            <label>Asset Number:</label>
            <input type="text" name="asset_number" required>
            <label>Investment Order:</label>
            <input type="text" name="investment_order">
            <label>Asset Name:</label>
            <input type="text" name="asset_name" required>
            <label>Serial Number:</label>
            <input type="text" name="serial_number">
            <label>Merk:</label>
            <input type="text" name="merk">
            <label>Type:</label>
            <input type="text" name="type">
            <label>Branch Code:</label>
            <input type="text" name="branch_code">
            <label>Branch Name:</label>
            <input type="text" name="branch_name">
            <label>Division Name:</label>
            <input type="text" name="division_name">
            <label>Department Name:</label>
            <input type="text" name="department_name">
            <label>User Name:</label>
            <input type="text" name="user_name">
            <label>Acquisition Price:</label>
            <input type="number" step="0.01" name="acquisition_price">
            <label>Acquisition Year:</label>
            <input type="date" name="acquisition_year">
            <label>Amortization Percentage:</label>
            <input type="number" step="0.01" name="amortization_percentage">
            <label>Condition:</label>
            <select name="condition">
                <option value="Good">Good</option>
                <option value="Damaged">Damaged</option>
                <option value="Lost">Lost</option>
                <option value="Updated">Updated</option>
                <option value="Deleted">Deleted</option>
            </select>
            <button type="submit">Add Asset</button>
        </form>
    </div>
</body>
</html>
