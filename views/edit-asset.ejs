<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Asset</title>
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
       
        .container {
            width: 90%;
            max-width: 1300px;
            background: white;
            padding: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin-top: 20px;
        }
        
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .form {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
        }
        
        .form-group {
            flex: 1 1 calc(33.33% - 16px);
            display: flex;
            flex-direction: column;
        }
        
        .label {
            font-size: 14px;
            font-weight: 700;
            color: black;
            margin-bottom: 5px;
        }
        
        .input-container {
            position: relative;
        }
        
        .input-container input, .input-container select {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }
        
        button {
            background-color: #4CAF50; /* Green background */
            border: none;
            color: white; /* White text */
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }
        
        @media (max-width: 768px) {
            .form-group {
                flex: 1 1 calc(50% - 16px);
            }
        }
        
        @media (max-width: 480px) {
            .form-group {
                flex: 1 1 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Asset</h1>
        <form action="/edit-asset/<%= asset.id %>" method="post" class="form">
            <div class="form-group">
                <label class="label">Asset Class <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="asset_class" value="<%= asset.asset_class %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Asset Number</label>
                <div class="input-container">
                    <input type="text" name="asset_number" value="<%= asset.asset_number %>">
                </div>
            </div>
            <div class="form-group">
                <label class="label">Investment Order</label>
                <div class="input-container">
                    <input type="text" name="investment_order" value="<%= asset.investment_order %>">
                </div>
            </div>
            <div class="form-group">
                <label class="label">Asset Name <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="asset_name" value="<%= asset.asset_name %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Serial Number</label>
                <div class="input-container">
                    <input type="text" name="serial_number" value="<%= asset.serial_number %>">
                </div>
            </div>
            <div class="form-group">
                <label class="label">Merk <span class="optional">(Optional)</span></label>
                <div class="input-container">
                    <input type="text" name="merk" value="<%= asset.merk %>">
                </div>
            </div>
            <div class="form-group">
                <label class="label">Type <span class="optional">(Optional)</span></label>
                <div class="input-container">
                    <input type="text" name="type" value="<%= asset.type %>">
                </div>
            </div>
            <div class="form-group">
                <label class="label">Branch Code <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="branch_code" value="<%= asset.branch_code %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Branch Name <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="branch_name" value="<%= asset.branch_name %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Division Name <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="division_name" value="<%= asset.division_name %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Department Name <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="department_name" value="<%= asset.department_name %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">User Name <span class="required">*</span></label>
                <div class="input-container">
                    <input type="text" name="user_name" value="<%= asset.user_name %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Acquisition Price <span class="required">*</span></label>
                <div class="input-container">
                    <input type="number" step="0.01" name="acquisition_price" value="<%= asset.acquisition_price %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Acquisition Year</label>
                <div class="input-container">
                    <input type="date" name="acquisition_year" value="<%= asset.acquisition_year.toISOString().split('T')[0] %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Amortization Percentage <span class="required">*</span></label>
                <div class="input-container">
                    <input type="number" step="0.01" name="amortization_percentage" value="<%= asset.amortization_percentage %>" required>
                </div>
            </div>
            <div class="form-group">
                <label class="label">Condition</label>
                <div class="input-container">
                    <select name="condition">
                        <option value="Good" <% if (asset.condition === 'Good') { %>selected<% } %>>Good</option>
                        <option value="Damaged" <% if (asset.condition === 'Damaged') { %>selected<% } %>>Damaged</option>
                        <option value="Lost" <% if (asset.condition === 'Lost') { %>selected<% } %>>Lost</option>
                        <option value="Updated" <% if (asset.condition === 'Updated') { %>selected<% } %>>Updated</option>
                        <option value="Deleted" <% if (asset.condition === 'Deleted') { %>selected<% } %>>Deleted</option>
                    </select>
                </div>
            </div>
            <div class="form-group" style="flex-basis: 100%; text-align: center;">
                <button type="submit">Update Asset</button>
            </div>
        </form>
    </div>
</body>
</html>

